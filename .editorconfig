# EditorConfig is awesome: http://EditorConfig.org
root = true

[*.{js,jsx,html,css}]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 0
trim_trailing_whitespace = true

[*.md]
max_line_length = 0
trim_trailing_whitespace = false

[COMMIT_EDITMSG]
max_line_length = 0

[*.json]
indent_size = 2
insert_final_newline = true

[**.min.js]
indent_style = ignore
insert_final_newline = false
